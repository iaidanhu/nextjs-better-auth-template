{
	"name": "nextjs-better-auth-template",
	"version": "0.1.0",
	"private": true,
	"description": "A production-ready authentication template using Next.js 16, Better Auth, Drizzle ORM, and Neon PostgreSQL. Deployed to Cloudflare Workers.",
	"keywords": [
		"nextjs",
		"better-auth",
		"authentication",
		"drizzle-orm",
		"neon",
		"postgresql",
		"cloudflare-workers",
		"template",
		"shadcn-ui",
		"tailwindcss"
	],
	"homepage": "https://github.com/iaidanhu/nextjs-better-auth-template#readme",
	"bugs": {
		"url": "https://github.com/iaidanhu/nextjs-better-auth-template/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/iaidanhu/nextjs-better-auth-template.git"
	},
	"license": "MIT",
	"author": "ardans@foxmail.com",
	"packageManager": "pnpm@9.0.0",
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=9.0.0"
	},
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"lint:fix": "next lint --fix",
		"typecheck": "tsc --noEmit",
		"deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
		"upload": "opennextjs-cloudflare build && opennextjs-cloudflare upload",
		"preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
		"cf-typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:pull": "drizzle-kit pull"
	},
	"dependencies": {
		"@neondatabase/serverless": "^1.0.2",
		"@opennextjs/cloudflare": "^1.15.1",
		"better-auth": "^1.4.18",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"drizzle-orm": "^0.45.1",
		"lucide-react": "^0.563.0",
		"next": "16.1.5",
		"radix-ui": "^1.4.3",
		"react": "19.1.5",
		"react-dom": "19.1.5",
		"resend": "^6.9.1",
		"tailwind-merge": "^3.4.0"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3",
		"@tailwindcss/postcss": "^4",
		"@types/node": "^20",
		"@types/react": "^19.1.5",
		"@types/react-dom": "^19.1.5",
		"drizzle-kit": "^0.31.8",
		"eslint": "^9",
		"eslint-config-next": "15.4.6",
		"shadcn": "^3.8.4",
		"tailwindcss": "^4",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.7.4",
		"wrangler": "^4.61.1"
	}
}
